{
  "openapi": "3.0.0",
  "info": {
    "title": "Quantify: Skill Evaluation API",
    "version": "1.0.0",
    "description": "API documentation for Quantify skill evaluation engine."
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid email or password" }
        }
      }
    },
    "/register-info": {
      "post": {
        "summary": "Get registration info for user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "User and skill info returned" },
          "404": { "description": "Employee not found" }
        }
      }
    },
    "/update-employee-skill": {
      "post": {
        "summary": "Update employee skill after evaluation",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "candidateId": { "type": "integer" },
                  "skill": { "type": "string" },
                  "score": { "type": "integer" },
                  "remarks": { "type": "string" }
                },
                "required": ["candidateId", "skill", "score", "remarks"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Skill updated" },
          "404": { "description": "Skill not found" }
        }
      }
    }
  }
}
