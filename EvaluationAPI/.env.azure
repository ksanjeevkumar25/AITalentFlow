# .env.azure - Template for Azure App Service Application Settings
# Copy these settings to Azure App Service Configuration > Application Settings

# Database Configuration (REQUIRED)
DB_SERVER=20.0.97.202\SQLDemo
DB_DATABASE=TestDB
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_DRIVER=ODBC Driver 17 for SQL Server

# Application Settings
DEBUG=false
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# CORS Settings (adjust as needed)
CORS_ORIGINS=https://your-frontend-domain.com,https://your-app.azurewebsites.net

# Upload Settings
MAX_UPLOAD_SIZE=100
UPLOAD_FOLDER=/tmp/uploads

# Feature Flags
ENABLE_SPEECH_RECOGNITION=true

# Azure-specific (optional)
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Connection Settings
WEBSITE_TIME_ZONE=UTC
